<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/scheduleFragment">

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="uk.gamesmith.runnerpal.schedule.ScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule" >
        <action
            android:id="@+id/action_scheduleFragment_to_runnerFragment"
            app:destination="@id/runnerFragment" />
    </fragment>
    <fragment
        android:id="@+id/runnerFragment"
        android:name="uk.gamesmith.runnerpal.runner.RunnerFragment"
        android:label="fragment_runner"
        tools:layout="@layout/fragment_runner" />
</navigation>